<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hospital_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hospital_search">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="-6.914744"
        mapbox:mapbox_cameraTargetLng="107.609810"
        mapbox:mapbox_styleUrl="mapbox://styles/yassua112/cjln6qtua18j92smwjvrvopou"
        mapbox:mapbox_cameraZoom="12.67"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/map_layout_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="30dp"/>


</RelativeLayout>